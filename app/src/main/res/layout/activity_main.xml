<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A2C5F2"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="219dp"
        android:layout_height="122dp"
        android:layout_marginTop="36dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/coin_adobe_express" />

    <EditText
        android:id="@+id/entradatxt"
        android:layout_width="129dp"
        android:layout_height="60dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="50dp"
        android:background="#41DDCE"
        android:ems="10"
        android:gravity="center"
        android:hint="Convertir"
        android:inputType="number"
        android:textColorHint="#CB231616"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <EditText
        android:id="@+id/salidatxt"
        android:layout_width="129dp"
        android:layout_height="60dp"
        android:layout_marginTop="50dp"
        android:background="#41DDCE"
        android:ems="10"
        android:gravity="center"
        android:hint="A"
        android:inputType="number"
        android:textColorHint="#CB231616"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/entradatxt"
        app:layout_constraintStart_toStartOf="@+id/entradatxt"
        app:layout_constraintTop_toBottomOf="@+id/entradatxt" />

    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="157dp"
        android:layout_height="60dp"
        android:layout_marginTop="52dp"
        android:background="#41DDCE"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toEndOf="@+id/salidatxt"
        app:layout_constraintTop_toBottomOf="@+id/spinner2" />

    <Spinner
        android:id="@+id/spinner2"
        android:layout_width="157dp"
        android:layout_height="60dp"
        android:layout_marginTop="48dp"
        android:background="#41DDCE"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toEndOf="@+id/entradatxt"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <Button
        android:id="@+id/convertirButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="140dp"
        android:backgroundTint="#418EF2"
        android:text="Convertir"
        app:layout_constraintEnd_toStartOf="@+id/resetearbutton"
        app:layout_constraintHorizontal_bias="0.396"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/salidatxt" />

    <Button
        android:id="@+id/resetearbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="140dp"
        android:layout_marginEnd="72dp"
        android:backgroundTint="#418EF2"
        android:text="Resetear"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner1" />

    <TextView
        android:id="@+id/resultadotv"
        android:layout_width="354dp"
        android:layout_height="42dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="64dp"
        android:backgroundTint="#41DDCE"
        android:gravity="center"
        android:text="Resultado"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        tools:background="#05F2DB" />
</androidx.constraintlayout.widget.ConstraintLayout>